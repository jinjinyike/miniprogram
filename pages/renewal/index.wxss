/* pages/renewal/index.wxss */

.con {
  position: relative;
}

.bg {
  position: absolute;
  top: -8%;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
}

.item-list {
  display: flex;
}

.item-info {
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #222;
}

.item {
  padding: 20rpx;
  background: #fff;
  margin: 32rpx;
  border-radius: 4px 10px 10px 10px;
}

.card {
  position: relative;
  text-align: center;
  /* height: 132rpx; */
  width: 200rpx;
  margin: 24rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border: 1px solid #d43d3d;
  border-radius: 10rpx;
}

.active {
  border: 2px solid #f85959;
  background-color: #ffd0d2;
}

.text-month {
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  color: #333;
}

.text-money-flag {
  font-size: 36rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #f85959;
}

.text-money {
  font-size: 40rpx;
  font-weight: bold;
  color: #f85959;
}

.text-info {
  width: 154rpx;
  height: 38rpx;
  line-height: 38rpx;
  color: #fff;
  display: inline-block;
  position: absolute;
  right: 0;
  top: -15rpx;
  font-size: 22rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  text-align: center;
  background-image: url('data:image/png;base64,');
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.pay-list {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  height: 106rpx;
  align-items: center;
  border: 1px solid #DDDDDD;
  border-left: none;
  border-right: none;
}

.pay-icon {
  width: 64rpx;
  height: 64rpx;
}

.pay-text {
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #333;
}

.btn-pay {
  width: 600rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  margin-top: 180rpx;
  margin-bottom: 54rpx;
}
