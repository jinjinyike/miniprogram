<view class="con">
  <form bindsubmit="formSubmit">
    <view class="item">
      <text>取消</text>
      <text class="send">发布</text>
    </view>

    <view class='item'>
      <text>发布类型：</text>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{objectArray}}" range-key='name'>
        <view class="picker">
          {{objectArray[index].name}}
        </view>
      </picker>
    </view>
    <view class='item'>
      <text>名称：</text>
      <input name='name'></input>
    </view>
    <view class='item'>
      <text>标签：</text>
      <input></input>
    </view>
    <view class='item'>
      <text>重量：</text>
      <input></input>
    </view>
    <view class='item'>
      <text>化验</text>
      <input></input>
    </view>
    <view class='item'>
      <text>地址</text>
      <input></input>
    </view>
    <view class='item'>
      <text>联系人：</text>
      <input></input>
    </view>
    <view class='item'>
      <text>联系电话：</text>
      <input></input>
    </view>
    <view class='item'>
      <text>消息置顶：</text>
      <switch checked bindchange="switch1Change" />
    </view>
  </form>
</view>