<view class="con">
  <form bindsubmit="formSubmit">
    <view class="item" wx:if='{{!id}}'>
      <text>取消</text>
      <button class="send" form-type="submit">发布</button>
    </view>
    <view class='item'>
      <text>发布类型：</text>
      <!-- <template wx:if='{{!id}}'> -->
      <picker name='type' bindchange="bindPickerChange" value="{{index}}" range="{{objectArray}}" range-key='name' data-key='index'>
        <view class="picker">
          {{objectArray[index].name}}
        </view>
      </picker>
      <!-- </template> -->

      <!-- <text wx:else>{{info.type==2?'收购':'出售'}}</text> -->
    </view>
    <view class='item'>
      <text>名称：</text>
      <input name='name' wx:if='{{!id}}' value='{{info.name}}'></input>
      <text wx:else>{{info.name}}</text>
    </view>
    <view class='item'>
      <text>标签：</text>
      <picker name='label' wx:if='{{!id}}' bindchange="bindPickerChange" value="{{idx}}" range="{{objectArray1}}" range-key='name' data-key='idx'>
        <view class="picker">
          {{objectArray1[idx].name}}
        </view>
      </picker>
      <text wx:else>{{info.label}}</text>
    </view>
    <view class='item'>
      <text>重量：</text>
      <input name='weight' wx:if='{{!id}}'></input>
      <text wx:else>{{info.weight}}</text>
    </view>
    <view class='item'>
      <text>化验：</text>
      <input name='analysis' wx:if='{{!id}}'></input>
      <text wx:else>{{info.analysis}}</text>
    </view>
    <view class='item'>
      <text>地址：</text>
      <input name='address' wx:if='{{!id}}'></input>
      <text wx:else>{{info.address}}</text>
    </view>
    <view class='item'>
      <text>联系人：</text>
      <input name='link_name' wx:if='{{!id}}'></input>
      <text wx:else>{{info.link_name}}</text>
    </view>
    <view class='item'>
      <text>联系电话：</text>
      <input name='link_phone' wx:if='{{!id}}'></input>
      <text wx:else>{{info.link_phone}}</text>
    </view>
    <view class='item'>
      <text>{{id?'添加关注':'消息置顶'}}：</text>
      <switch name='is_top' checked="{{info.is_concern==1?true: false}}" bindchange="switchChange" />
    </view>
  </form>

</view>