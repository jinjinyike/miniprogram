/* pages/release/index.wxss */
page{
  background: #F3F5F7;
}
.con {
  padding: 0 25rpx;
  padding-top: 110rpx;
  position: relative;
}
.titleImg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 231rpx;
  z-index: -1;
}
.form{
  border-radius: 8rpx;
  padding: 0 25rpx 30rpx;
  background: #fff;
}
.item {
  height: 82rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
  color: #222;
}

.item input {
  text-align: right;
  color: #a0a0a0;
  flex: 1;
}

.item text:nth-of-type(2) {
  color: #a0a0a0;
  flex: 1;
}
.send{
  width:600rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  background:#f85959 ;
  color: #fff;
  margin-top: 30rpx;
  border: none;
}
.flex-type{
  display: flex;
  align-items: center;
}
.flex-type view{
  display: inline-block;
  width: 138rpx;
  height: 45rpx;
  border: 1px solid #737373;
  color: #737373;
  margin-left: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 45rpx;
}
.flex-type .active{
  border: 1px solid #FF0000;
  background:rgba(255,0,0,0.1);
  color: #FF0000;
}
