/* pages/company/index.wxss */
/* 检索头 */
page{
  background: #F3F5F7;
}
.header{
  height: 240rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 23rpx;
  position: relative;
}
.search-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.search{
  margin-top: 100rpx;
  height: 76rpx;
  background: #fff;
  width: 630rpx;
  border-radius: 76rpx;
  padding: 0 0 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.search input{
  height: 76rpx;
  color: #BBBBBB;
}
.search image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20px;
}
/* .plus{
  width: 38rpx;
