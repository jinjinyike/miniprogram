/* 滑动tab */
.scroll-con{
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scroll{
  width: 670rpx;
  height:80rpx;
  line-height: 80rpx;
  padding-left:  35rpx;
  white-space: nowrap;
}
.scroll text{
  display: inline-block;
  height: calc(100% - 3px);
  margin-right: 39rpx;
  color: #222;
  font-size: 32rpx;
}
.scroll .active{
  color: #D43D3D;
  border-bottom: 2px solid #D43D3D;
}
.more{
  border-left: 1px solid #e8e8e8;
  width: 80rpx;
  text-align: center;
}
.more image{
  width:17rpx;
  height: 30rpx;
}
.border{
  height: 1px;
  width: 100%;
  border-bottom: 1px solid #e8e8e8;
}
.no-more{
  text-align: center;
  margin-top: 200rpx;
}
.no-more image{
  width: 288rpx;
  height: 222rpx;
}
.no-more view{
  color: #999999;
  font-size: 26rpx;
}
